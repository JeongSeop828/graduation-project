<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/block_background"
            android:columnCount="9"
            android:orientation="horizontal"> <!-- 테두리 배경 추가 -->

            <!-- 첫 번째 항목 이미지 -->

            <ImageView
                android:id="@+id/IVdiseaseImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/test_dog" />

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_rowSpan="4"
                android:layout_rowWeight="1"
                android:layout_marginBottom="4dp"
                android:background="#099924" />

            <!-- 질환명, 진행 상태, 위험도에 대한 텍스트 항목 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="질환명"
                android:textSize="14dp"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="#099924" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="진행상태"
                android:textSize="14dp"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="#099924" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="위험도"
                android:textSize="14dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_columnWeight="1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#CCCCCC" />

            <View
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:background="#099924" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_columnWeight="1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#CCCCCC" />

            <View
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:background="#099924" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_columnWeight="1"
                android:layout_marginLeft="4dp"
                android:background="#CCCCCC" />

            <!-- 질환명, 진행 상태, 위험도 정보 -->
            <TextView
                android:id="@+id/TVdiseaseName"
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="여드름"
                android:textSize="14dp"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:layout_rowWeight="1"
                android:background="#099924"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/TVdiseaseProgress"
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="중기"
                android:textSize="14dp"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:layout_rowWeight="1"
                android:background="#099924"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/TVriskScore"
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="6"
                android:textSize="14dp"
                android:textStyle="bold" />
                <!--android:drawableRight="@drawable/drawable_resize"-->

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:background="#099924" />

            <!-- 질환 설명 및 증상 -->
            <TextView
                android:layout_width="0dp"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="질환 설명 및 증상"
                android:textSize="18dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:background="#CCCCCC" />

            <TextView
                android:id="@+id/TVdiseaseContent"
                android:layout_width="0dp"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="- 피지선과 모낭의 염증으로 인해 발생하는 피부질환입니다. 주로 입 주위, 턱, 입술 주변에 생기며, 모낭염과 함께 발생하는 경우가 많습니다."
                android:textSize="14dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:background="#099924" />


            <!-- 관리 및 치료법 -->
            <TextView
                android:layout_width="0dp"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="관리 및 치료법"
                android:textSize="18dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:background="#CCCCCC" />


            <TextView
                android:id="@+id/TVdiseaseTreatment"
                android:layout_width="0dp"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="- 소독된 거즈에 따뜻한 물을 묻혀 질환 주변 닦아주기 \n- 플라스틱 식기 대신 세라믹, 스테인리스 식기 사용\n- 면역력 강화를 위한 균형 잡힌 식단 제공"
                android:textSize="14dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:background="#099924" />


            <!-- 추천 약품 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="추천 약품"
                android:textSize="18dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:background="#CCCCCC" />

            <TextView
                android:id="@+id/TVmedications"
                android:layout_width="0dp"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="- 국소 치료제\n- 경구 항생제\n- 소염제 및 스테로이드"
                android:textSize="14dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_columnSpan="9"
                android:layout_columnWeight="1"
                android:background="#099924" />

            <TextView
                android:layout_width="140dp"
                android:layout_columnSpan="3"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="근처 동물병원"
                android:textSize="18dp"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_marginTop="4dp"
                android:background="#099924" />

            <TextView
                android:layout_width="0dp"
                android:layout_columnSpan="5"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="동물병원 방문 추천 여부"
                android:textSize="18dp"
                android:textStyle="bold" />

            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_columnSpan="3"
                android:background="#CCCCCC" />

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:background="#099924" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_columnSpan="5"
                android:layout_columnWeight="1"
                android:layout_marginLeft="4dp"
                android:background="#CCCCCC" />

            <!-- 근처 동물병원 이미지 -->
            <ImageView
                android:id="@+id/IVHospital"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_rowSpan="1"
                android:layout_columnSpan="3"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/test_map" />

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:background="#099924" />


            <TextView
                android:layout_width="0dp"
                android:layout_columnSpan="5"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="- 위험도 1~5 : 자가 관리 가능\n- 위험도 6~10 : 모니터링 필요(악화 시 병원 방문)\n- 위험도 11 이상 : 즉시 동물병원 방문"
                android:textStyle="bold"
                android:textSize="14dp"/>

        </GridLayout>

        <!-- 돌아가기 버튼 -->
        <android.widget.Button
            android:id="@+id/btnBackToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:text="홈으로 돌아가기"
            android:textColor="#FFFFFF"
            android:background="@drawable/green_btn"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>