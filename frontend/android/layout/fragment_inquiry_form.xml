<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.InquiryFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/block_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="2"
                android:rowCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="제목"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/errorInquiryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="5dp"
                android:text="제목을 입력하세요"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:visibility="gone"/>  <!-- 경고 메시지는 숨겨둡니다. -->

            <EditText
                android:id="@+id/editInquiryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:background="@drawable/edit_text_background"
                android:hint="제목을 입력하세요"
                android:padding="10dp" />

            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="2"
                android:rowCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="내용"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/errorInquiryContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="5dp"
                    android:text="내용을 입력하세요"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />  <!-- 경고 메시지는 숨겨둡니다. -->

                <EditText
                    android:id="@+id/editInquiryContent"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@drawable/edit_text_background"
                    android:gravity="start"
                    android:layout_columnSpan="2"
                    android:hint="내용을 입력하세요"
                    android:padding="10dp" />
            </GridLayout>
        </LinearLayout>

        <android.widget.Button
            android:id="@+id/btnSubmitInquiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_btn"
            android:text="제출하기"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>